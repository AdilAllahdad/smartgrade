PORT=5000
MONGODB_URI=mongodb://localhost:27017/exam-system
JWT_SECRET=your_jwt_secret_here
NODE_ENV=development

# CORS Configuration (comma-separated list of allowed origins)
# For production, add your frontend URLs
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Twilio SMS Configuration (Optional - for SMS notifications)
# Sign up at https://www.twilio.com/try-twilio to get these credentials
# If not configured, SMS will be logged to console only (development mode)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
